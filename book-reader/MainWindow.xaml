<Window x:Class="book_reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:book_reader"
        Title="MainWindow" Height="400" Width="800"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <DockPanel>



        <Grid DockPanel.Dock="Left" Background="CadetBlue">

            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

                    <TextBox Name="pageTxt" FontSize="15" Padding="30" HorizontalContentAlignment="Stretch" TextAlignment="Justify" Text="No book selected." AcceptsReturn="True" TextWrapping="NoWrap" IsReadOnly="True" Width="700" />
                    
                </ScrollViewer>
            </Grid>

            <Grid MouseEnter="MainMenu_MouseEnter" MouseLeave="MainMenu_MouseLeave" Background="Transparent" HorizontalAlignment="Left" Width="48">
                <Menu Name="MainMenu" DockPanel.Dock="Left" Visibility="Collapsed">
                    <MenuItem Header="Import" Click="Import_Click"></MenuItem>
                    <MenuItem Header="proba"  Click="Next_Page"></MenuItem>
                </Menu>


            </Grid>


        </Grid>




    </DockPanel>
</Window>
