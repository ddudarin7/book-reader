<Window x:Class="book_reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:book_reader"
        Title="MainWindow" Height="350" Width="650">
    <DockPanel>
        <Grid DockPanel.Dock="Left" Width="50" MouseEnter="MainMenu_MouseEnter" MouseLeave="MainMenu_MouseLeave" Background="White">
            <Menu Name="MainMenu" DockPanel.Dock="Left" Visibility="Hidden" >
                <MenuItem Header="Import" Click="Import_Click"></MenuItem>
                <MenuItem Header="proba"></MenuItem>
            </Menu>
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid DockPanel.Dock="Right" VerticalAlignment="Stretch" Background="Black">
                <TextBox Name="pageTxt" TextAlignment="Justify" Text="Da li ovo radiiii?" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True" />
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
